<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.stylefeng.guns.modular.dao.WorkPeopleDao">

    <resultMap type="cn.stylefeng.guns.modular.entity.WorkPeople" id="WorkPeopleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="mobile" column="mobile" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="ege" column="ege" jdbcType="VARCHAR"/>
        <result property="ziZhi" column="zi_zhi" jdbcType="VARCHAR"/>
        <result property="auditStatus" column="audit_status" jdbcType="INTEGER"/>
        <result property="auditPeople" column="audit_people" jdbcType="INTEGER"/>
        <result property="auditTime" column="audit_time" jdbcType="TIMESTAMP"/>
        <result property="typeName" column="type_name" jdbcType="VARCHAR"/>
        <result property="mgrId" column="mgr_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WorkPeopleMap">
        select
          id, name, mobile, description, ege, zi_zhi, audit_status, audit_people, audit_time, type_name, mgr_id
        from lbs.work_people
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="WorkPeopleMap">
        select
          id, name, mobile, description, ege, zi_zhi, audit_status, audit_people, audit_time, type_name, mgr_id
        from lbs.work_people
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="WorkPeopleMap">
        select
          id, name, mobile, description, ege, zi_zhi, audit_status, audit_people, audit_time, type_name, mgr_id
        from lbs.work_people
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="mobile != null and mobile != ''">
                and mobile = #{mobile}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
            <if test="ege != null and ege != ''">
                and ege = #{ege}
            </if>
            <if test="ziZhi != null and ziZhi != ''">
                and zi_zhi = #{ziZhi}
            </if>
            <if test="auditStatus != null">
                and audit_status = #{auditStatus}
            </if>
            <if test="auditPeople != null">
                and audit_people = #{auditPeople}
            </if>
            <if test="auditTime != null">
                and audit_time = #{auditTime}
            </if>
            <if test="typeName != null and typeName != ''">
                and type_name = #{typeName}
            </if>
            <if test="mgrId != null">
                and mgr_id = #{mgrId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into lbs.work_people(name, mobile, description, ege, zi_zhi, audit_status, audit_people, audit_time, type_name, mgr_id)
        values (#{name}, #{mobile}, #{description}, #{ege}, #{ziZhi}, #{auditStatus}, #{auditPeople}, #{auditTime}, #{typeName}, #{mgrId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update lbs.work_people
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="mobile != null and mobile != ''">
                mobile = #{mobile},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="ege != null and ege != ''">
                ege = #{ege},
            </if>
            <if test="ziZhi != null and ziZhi != ''">
                zi_zhi = #{ziZhi},
            </if>
            <if test="auditStatus != null">
                audit_status = #{auditStatus},
            </if>
            <if test="auditPeople != null">
                audit_people = #{auditPeople},
            </if>
            <if test="auditTime != null">
                audit_time = #{auditTime},
            </if>
            <if test="typeName != null and typeName != ''">
                type_name = #{typeName},
            </if>
            <if test="mgrId != null">
                mgr_id = #{mgrId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from lbs.work_people where id = #{id}
    </delete>

</mapper>